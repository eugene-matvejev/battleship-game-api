{% extends '@Game/blocks/body.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/game/css/game.css') }}" type="text/css"/>
    <link rel="stylesheet" href="{{ asset('bundles/game/css/game-results.css') }}" type="text/css"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/game/js/service/api-request.service.js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/game/js/prototype/battlefield.prototype.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/game/js/prototype/cell.prototype.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/game/js/prototype/game.prototype.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/game/js/prototype/game-results.prototype.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/game/js/prototype/player.prototype.js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/game/js/controller/game.controller.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/game/js/controller/game-results.controller.js') }}"></script>
{% endblock %}

{% block content %}
    <div id="game-current-area" data-turn-link="{{ path('battleship.game.api.turn', {'cellId' : 0})|trim('0') }}"
                                data-init-link="{{ path('battleship.game.api.init') }}">
    </div>
    <div id="modal-area"></div>
    <div id="game-results-area" data-game-results-link="{{ path('battleship.game.api.game.results', {'page' : 0})|trim('0') }}"></div>
{% endblock %}
